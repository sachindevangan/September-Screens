{
  "name": "september-screens",
  "version": "1.0.0",
  "description": "A cozy autumn-themed movie suggestion app built with React, Vite, and Electron.",
  "author": "Sachin Devangan",
  "private": true,
  "type": "module",
  "main": "electron-main.js",
  "homepage": "https://sachindevangan.github.io/September-Screens",
  "scripts": {
    "dev": "vite",
    "build:web": "cross-env VITE_BUILD_TARGET=web vite build",
    "build:electron": "cross-env BUILD_TARGET=electron vite build",
    "preview": "vite preview",
    "predeploy": "npm run build:web",
    "deploy": "gh-pages -d dist",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build:electron && electron-builder"
  },
  "dependencies": {
    "framer-motion": "^12.23.15",
    "gsap": "^3.13.0",
    "howler": "^2.2.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.1.2",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "vite": "^7.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.septemberscreens.app",
    "productName": "September Screens",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "public"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "September Screens",
      "license": "public/LICENSE.txt"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
